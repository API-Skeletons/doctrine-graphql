{
    "name": "api-skeletons/doctrine-graphql",
    "description": "GraphQL Type Driver for Doctrine ORM",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tom H Anderson",
            "email": "tom.h.anderson@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "doctrine/orm": "^2.11",
        "doctrine/doctrine-laminas-hydrator": "^3.1",
        "api-skeletons/doctrine-querybuilder-filter": "^2.0",
        "webonyx/graphql-php": "^v14.7",
        "psr/container": "^2.0",
        "league/event": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ApiSkeletons\\Doctrine\\GraphQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApiSkeletonsTest\\Doctrine\\GraphQL\\": "test/"
        }
    },
    "require-dev": {
        "doctrine/coding-standard": "^9.0",
        "doctrine/dbal": "^3.1.1",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.21",
        "symfony/cache": "^5.3",
        "ramsey/uuid": "^4.4"
    },
    "scripts": {
        "test": "vendor/bin/phpcs && vendor/bin/phpunit && vendor/bin/psalm",
        "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html=coverage"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
